{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "src",
        "paths": {
            "@components/*": ["components/*"],
            "@styles/*": ["styles/*"],
            "@hooks/*": ["hooks/*"],
            "@utils/*": ["utils/*"],
            "@services/*": ["services/*"],
            "@types/*": ["types/*"],
            "@config/*": ["config/*"],
            "@app/*": ["app/*"],
            "@redux/*": ["redux/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
